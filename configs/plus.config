# ==================== 目标配置 ====================
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

# ==================== 镜像格式 ====================
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_KERNEL_PARTSIZE=16

# ==================== 基础系统 ====================
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_fstools=y
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# ==================== 网络 ====================
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_iptables=y

# ==================== K2P驱动 ====================
CONFIG_PACKAGE_kmod-mt7621=y
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt76x2=y
CONFIG_PACKAGE_kmod-cfg80211=y
CONFIG_PACKAGE_kmod-mac80211=y
CONFIG_PACKAGE_wpad-basic=y

# ==================== 优化 ====================
CONFIG_TARGET_OPTIMIZATION="-Os -pipe -mcpu=1004kc"
# ==================== 核心系统增强 ====================
# 调整根分区大小以容纳更多插件（必须）
CONFIG_TARGET_ROOTFS_PARTSIZE=256

# ==================== 系统工具（基础） ====================
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_openssh-client=y
CONFIG_PACKAGE_openssh-server=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_tar=y
CONFIG_PACKAGE_gzip=y
CONFIG_PACKAGE_unzip=y

# ==================== 网络诊断工具 ====================
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_traceroute=y
CONFIG_PACKAGE_mtr=y
CONFIG_PACKAGE_ethtool=y
CONFIG_PACKAGE_arp-scan=y
CONFIG_PACKAGE_pciutils=y

# ==================== 网络优化与功能 ====================
# 多拨与负载均衡 (按需启用)
# CONFIG_PACKAGE_luci-app-mwan3=y
# CONFIG_PACKAGE_mwan3=y
# CONFIG_PACKAGE_luci-app-syncdial=y

# 网络加速 (显著提升NAT性能，K2P强烈推荐)
CONFIG_PACKAGE_luci-app-turboacc=y

# UPnP (改善游戏、BT体验)
CONFIG_PACKAGE_luci-app-upnp=y

# 动态DNS (必备)
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts-cloudflare=y

# ==================== 科学上网插件 (单选一，体积大) ====================
# 选项1: V2Ray (推荐)
CONFIG_PACKAGE_luci-app-v2ray=y
CONFIG_PACKAGE_v2ray-core=y
CONFIG_PACKAGE_v2ray-geodata=y

# 选项2: SSR-Plus (取消下面几行注释，并注释掉上面的V2Ray行)
# CONFIG_PACKAGE_luci-app-ssr-plus=y
# CONFIG_PACKAGE_shadowsocksr-libev-ssr-local=y
# CONFIG_PACKAGE_shadowsocksr-libev-ssr-redir=y

# 选项3: Passwall (功能全面)
# CONFIG_PACKAGE_luci-app-passwall=y

# ==================== 广告过滤与DNS优化 ====================
# 方案A: AdGuardHome (功能强大，占用稍多)
# CONFIG_PACKAGE_luci-app-adguardhome=y
# CONFIG_PACKAGE_adguardhome=y

# 方案B: SmartDNS (DNS优化/分流，可与AdGuardHome共存)
CONFIG_PACKAGE_luci-app-smartdns=y
CONFIG_PACKAGE_smartdns=y

# ==================== VPN支持 ====================
# WireGuard (现代、高效)
CONFIG_PACKAGE_luci-app-wireguard=y
CONFIG_PACKAGE_wireguard-tools=y

# OpenVPN (传统，兼容性好)
# CONFIG_PACKAGE_luci-app-openvpn=y
# CONFIG_PACKAGE_openvpn-openssl=y

# ==================== LuCI界面与管理增强 ====================
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-commands=y
CONFIG_PACKAGE_luci-app-filetransfer=y
CONFIG_PACKAGE_luci-app-statistics=y
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-attendedsysupgrade=y
CONFIG_PACKAGE_luci-app-uhttpd=y

# ==================== 多语言支持 ====================
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-i18n-opkg-zh-cn=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ddns-zh-cn=y
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y
CONFIG_PACKAGE_luci-i18n-adguardhome-zh-cn=y
CONFIG_PACKAGE_luci-i18n-wireguard-zh-cn=y
CONFIG_PACKAGE_luci-i18n-commands-zh-cn=y
CONFIG_PACKAGE_luci-i18n-ttyd-zh-cn=y
